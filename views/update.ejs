<h3 class="submit_new">Edit RECIPE</h3>
<div class="form-container">

    <form action="/editRecipe/<%=get_recipe._id%>?_method=PUT" enctype="multipart/form-data" method="POST">
      <!-- Name -->
    <div class="row">

      <div class="col-25">
        <label for="recipeName">Name</label>
      </div>
      <div class="col-75">
        <input type="text" id="recipeName" name="recipeName" placeholder="Recipe name.." value="<%=get_recipe.name%>">
      </div>

    </div>

      <!-- Email -->

    <div class="row">
        
        <div class="col-25">
            <label for="email">Email</label>
          </div>
          
          <div class="col-75">
            <input type="email" id="email" name="email" placeholder="Enter your email.." value="<%=get_recipe.email%>">
          </div>

        </div>

          <!-- Description -->

        <div class="row">

            <div class="col-25">
              <label for="description">Description</label>
            </div>
            <div class="col-75">
              <textarea id="description" name="description" placeholder="Write something.." style="height:200px"><%=get_recipe.description%></textarea>
            </div>
      
          </div>

         <!-- Ingredients -->
        <div class="row">

            <div class="col-25">
                <label for="ingredients">Ingredients</label>
            </div>

            <div class="col-75" id="ingredients_lists">
                <div class="ingredientDiv">
                    <input type="text" name="ingredients" placeholder="add one per time..." value="<%=get_recipe.ingredients%>">
                </div>
            </div>

         </div>

         <div class="row">
            <button type="button" class="button" id="ingredients_btn">Add Ingredients</button>
          </div>

          <!-- category -->
          <div class="row">

            <div class="col-25">
              <label for="category">Choose Category</label>
            </div>
      
            <div class="col-75">
              <select id="category" name="category">
                <option value="<%=get_recipe.category%>"><%=get_recipe.category%></option>
                <option value="SOUP">Soup</option>
                <option value="RICE">Rice</option>
                <option value="BEANS">Beans</option>
                <option value="PORRIDGE">Porridge</option>
                <option value="SNACKS">Snacks</option>
              </select>
            </div>
      
          </div>

        <!-- Image -->
        <div class="row">

            <div class="col-25">
            <label for="image">Add Image</label>
            </div>
    
            <div class="col-75">
            <input type="file" id="image" name="image" placeholder="Upload recipe image.." accept="image/">
            </div>

        </div>

        <div class="row">
        <input type="submit" value="Submit">
        </div>


    </form>
  </div>